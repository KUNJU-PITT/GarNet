<tool id="map_motifs_to_peaks" name="map_motifs_to_peaks" version="0.2.20">
  <description>Integrate Epigenetics and Transcriptomics data</description>
  <requirements>
    <requirement type="package" version="0.2.20">garnet</requirement>
  </requirements>
  <command>
    GarNet
        -p $peaks_file
        -m $motifs_file
        -o OUTPUTDIR
  </command>
  <inputs>
    <!-- data -->
    <param name="peaks_file" type="data" type="bed" optional="true" label="" help="BED file containing epigenetic regions of interest" />
    <param name="motifs_file" type="data" type="bed" optional="true" label="" help="BED file containing locations and scores of TF motifs" />
  </inputs>

  <outputs>
    <data name="" from_work_dir="output_dir/output_figures/-log10_P-value.png" hidden="false" />

  </outputs>
  <help>

  </help>
  <citations><citation type="doi"></citation></citations>
</tool>
